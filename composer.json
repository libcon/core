{
    "name": "libcon/core",
    "description": "Core contracts for use in all LibCon packages.",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Bas Hamar de la BrethoniÃ¨re",
            "email": "bas@basje.com"
        }
    ],
    "require": {
        "php": ">=7.1.0"
    },
    "autoload": {
        "psr-4": {
            "LibCon\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LibCon\\Tests\\Core\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.1",
        "sllh/composer-lint": "^1.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.x-dev"
        }
    },
    "scripts": {
        "test": [
            "@unit"
        ],
        "unit": "phpunit --colors=always"
    }
}
